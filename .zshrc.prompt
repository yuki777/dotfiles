# prompt
colors
local black=$'%{\e[30m%}'
local red=$'%{\e[31m%}'
local green=$'%{\e[32m%}'
local yellow=$'%{\e[33m%}'
local blue=$'%{\e[34m%}'
local purple=$'%{\e[35m%}'
local cyan=$'%{\e[36m%}'
local white=$'%{\e[1;37m%}'
local default=$'%{\e[1;m%}'

## set random name_number, host_number
